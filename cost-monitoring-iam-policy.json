            ],
            "Resource": "*"
        },
        {
            "Sid": "BudgetsReadAccess",
            "Effect": "Allow",
            "Action": [
                "budgets:DescribeBudget",
                "budgets:DescribeBudgets",
                "budgets:DescribeBudgetPerformanceHistory"
            ],
            "Resource": "*"
        },
        {
            "Sid": "STSGetCallerIdentity",
            "Effect": "Allow",
            "Action": [
                "sts:GetCallerIdentity"
            ],
            "Resource": "*"
        }
